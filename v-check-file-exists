#!/bin/bash
file="$1"

if [ -f "$file" ]; then
  # Extract version from the file
  version=$(grep '^VERSION=' "$file" 2>/dev/null | head -n1 | sed -E 's/^VERSION=["'\''"]?([^"'\''"]*)["'\''"]?/\1/')

  if [ -n "$version" ]; then
    echo "{\"exists\":true,\"version\":\"$version\"}"
  else
    echo "{\"exists\":true}"
  fi

  exit 0
else
  echo "{\"exists\":false}"
  exit 1
fi
